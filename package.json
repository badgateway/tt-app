  "homepage": "https://github.com/badgateway/tt-app#readme",
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.3.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.1.2"
  },
  "types": "dist/",
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "dependencies": {
    "@curveball/accesslog": "^0.2.0",
